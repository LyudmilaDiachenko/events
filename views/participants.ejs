<!DOCTYPE html>
<html>
  <head>
    <title>Cinema events</title>
    <link rel="icon" type="image/x-icon" href="/images/favicon.ico">
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script defer src="/javascripts/participants.js"></script>
    <% if (background) { %>
      <style>
        body::before {
          content: "";
          position: fixed;
          top: 0;
          left: 0;
          width: 100%;
          height: 100%;
          opacity: 0.3;
          z-index: -1;
          background-size: cover;
          background-repeat: no-repeat;
          background-image: url('https://media.themoviedb.org/t/p/w1920_and_h800_multi_faces<%= background %>');
        }
      </style>
    <% } %>
  </head>
  <body>
    <h1><%= title %></h1>
    <p>Participants</p>
    <div>
      <% participants.map(event => { %>
        <span><%= event.name %></span>
        <span><%= event.email %></span>
        <span><%= event.date %></span>
      <% }) %>
    </div>

    <canvas id="chart" data-participants="<%= JSON.stringify(participants) %>"></canvas>

  </body>
</html>
